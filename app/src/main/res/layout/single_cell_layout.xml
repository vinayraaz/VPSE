<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearLayout_MW"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp2"
    tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp,ContentDescription,NestedWeights,HardcodedText,UselessParent,UseCompoundDrawables,DisableBaselineAlignment,UnusedAttribute,InefficientWeight">

    <RelativeLayout
        android:id="@+id/rl_calendar_circle"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calendar_date_id"
            style="@style/textView_M"
            android:gravity="center_horizontal"
            android:textSize="10sp"

            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp10"
            android:layout_gravity="center"
            android:text="@string/last_date"/>

        <RelativeLayout
            android:id="@+id/event_wrapper"
            style="@style/relativeView_MW"
            android:layout_margin="@dimen/dp4"
            android:gravity="center"
            android:layout_below="@id/calendar_date_id"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_id_1"
                android:layout_width="@dimen/dp4"
                android:layout_height="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"/>

            <TextView
                android:id="@+id/event_id_2"
                android:layout_width="@dimen/dp4"
                android:layout_height="@dimen/dp4"
                android:layout_toRightOf="@+id/event_id_1"/>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>