<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_popup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp15"
            android:text="Add Houses"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etHouseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinnerbackground_two"
            android:hint="Enter House Name"
            android:padding="5dp"
            tools:ignore="Autofill,TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp10"
                android:text="Select Teacher" />

            <EditText
                android:id="@+id/etTeacher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground_two"
                android:hint="Enter Teacher Name"
                android:padding="5dp"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp10"
                android:text="Select Caption" />

            <EditText
                android:id="@+id/etCaption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground_two"
                android:hint="Enter Caption Name"
                android:padding="5dp"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp10"
                android:text="Select Vice Caption" />

            <EditText
                android:id="@+id/etViceCaption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground_two"
                android:hint="Enter Caption Name"
                android:padding="5dp"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp10"
                android:text="Select House Color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground"
                android:gravity="center">

                <Spinner
                    android:id="@+id/spinnerColorName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="@dimen/dp35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp10"
                android:text="No of Student" />

            <EditText
                android:id="@+id/ed_studentNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/spinnerbackground_two"
                android:hint="Enter Student No"
                android:padding="5dp"
                android:textSize="14sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_round_shape_green"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>